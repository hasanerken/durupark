    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
  House No <br>
    <%= f.collection_select(:house_id, House.all, :id, :number) %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
